<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/fill_gray_round_corner"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shopProfileImageView"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars[1]" />

        <TextView
            android:id="@+id/shopNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/shopProfileImageView"
            app:layout_constraintTop_toBottomOf="@+id/shopProfileImageView"
            tools:text="매장명" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_location_on"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/shopNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/shopNameTextView"
            tools:text="주소" />

        <TextView
            android:id="@+id/telNumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/addressTextView"
            app:layout_constraintTop_toBottomOf="@+id/addressTextView"
            tools:text="051-000-0000" />

        <TextView
            android:id="@+id/descTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="3"
            android:textAlignment="gravity"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/telNumTextView"
            tools:text="소개" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/telNumTextView"
            app:layout_constraintTop_toBottomOf="@+id/telNumTextView"
            app:srcCompat="@drawable/ic_filter_none" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
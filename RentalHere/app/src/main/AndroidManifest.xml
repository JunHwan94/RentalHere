<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmon.rentalhere">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/WhiteStatusBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.WriteReviewActivity"></activity>
        <activity android:name=".view.AllReviewActivity" />
        <activity android:name=".view.FindUserActivity" />
        <activity
            android:name=".view.TermsActivity"
            android:theme="@style/NoStatusBar" />
        <activity
            android:name=".view.SignUpActivity"
            android:theme="@style/NoStatusBar" />
        <activity android:name=".view.LoginActivity" />
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/NoStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/WhiteStatusBar" />
    </application>

</manifest>